@model asc_general.Models.education

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}

<h2>Edit</h2>

@Html.AntiForgeryToken()

@using (Html.BeginForm("Edit","CrudEducations",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h4>education</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="control-label col-md-2">Baxca adi</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Education Category</label>
            <div class="col-md-10">
                @Html.DropDownList("edu_cat_id", null, htmlAttributes: new { @class = "" })
                @Html.ValidationMessageFor(model => model.edu_cat_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.photo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="image" type="image" src="~/Uploads/@Html.DisplayFor(model => model.photo)" width="100" style="margin-bottom:10px;" />
                <input type="hidden" name="oldfile" value="@Html.DisplayFor(model => model.photo)" />
                @Html.EditorFor(model => model.photo, new { htmlAttributes = new { @class = "form-border", @type = "file" } })
                @Html.ValidationMessageFor(model => model.photo, "", new { @class = "text-danger" }) 
                
                @if(ViewBag.ErrorMsgForUpload != null)
                {
                    <p class="text-danger">@ViewBag.ErrorMsgForUpload</p>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
